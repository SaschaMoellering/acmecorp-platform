      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Live, daemon, and peak JVM threads.",
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "max by (application) (jvm_threads_live_threads{application=~\"$application\"})",
          "legendFormat": "{{application}} live",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "max by (application) (jvm_threads_daemon_threads{application=~\"$application\"})",
          "legendFormat": "{{application}} daemon",
          "refId": "B"
        },
        {
          "editorMode": "code",
          "expr": "max by (application) (jvm_threads_peak_threads{application=~\"$application\"})",
          "legendFormat": "{{application}} peak",
          "refId": "C"
        }
      ],
      "title": "Threads: Live / Daemon / Peak",
      "type": "timeseries"
    },
    {
