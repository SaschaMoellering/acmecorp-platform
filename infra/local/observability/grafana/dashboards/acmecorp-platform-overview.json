{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Number of AcmeCorp services currently up (scrape successful).",
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "count(count by (application) (up))",
          "instant": true,
          "legendFormat": "services up",
          "range": false,
          "refId": "A"
        }
      ],
      "title": "Services Up",
      "type": "stat"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Gateway requests per second based on Micrometer http_server_requests_seconds_count.",
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "gridPos": { "h": 6, "w": 18, "x": 6, "y": 0 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"gateway-service\"}[1m]))",
          "legendFormat": "gateway rps",
          "refId": "A"
        }
      ],
      "title": "Gateway RPS",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "5xx ratio over all gateway requests (in %).",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 6 },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "100 * ((sum(rate(http_server_requests_seconds_count{application=\"gateway-service\",status=~\"5..\"}[5m])) or vector(0)) / clamp_min(sum(rate(http_server_requests_seconds_count{application=\"gateway-service\"}[5m])), 1e-9))",
          "instant": true,
          "legendFormat": "gateway 5xx %",
          "range": false,
          "refId": "A"
        }
      ],
      "title": "Gateway 5xx Rate (%)",
      "type": "stat"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Gateway p95 latency. Uses histogram buckets if available; falls back to average latency otherwise.",
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 18, "x": 6, "y": 6 },
      "id": 4,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{application=\"gateway-service\"}[5m])))",
          "legendFormat": "p95 (bucket)",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "sum(rate(http_server_requests_seconds_sum{application=\"gateway-service\"}[5m])) / clamp_min(sum(rate(http_server_requests_seconds_count{application=\"gateway-service\"}[5m])), 1e-9)",
          "legendFormat": "avg (fallback)",
          "refId": "B"
        }
      ],
      "title": "Gateway Latency (p95 + fallback)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Heap memory used per application. Uses area=\"heap\" if present (Micrometer standard).",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 12 },
      "id": 5,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum by (application) (jvm_memory_used_bytes{application=~\"$application:regex\"})",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "title": "JVM Heap Used (by application)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Live JVM threads per application.",
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 12 },
      "id": 6,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "max by (application) ({__name__=~\"jvm_threads_live.*\", application=~\"$application:regex\"})",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "title": "Live Threads (by application)",
      "type": "timeseries"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["acmecorp", "episode-4", "observability"],
