  "links": [],
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "GC pause p95 from histogram buckets, with avg fallback.",
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "histogram_quantile(0.95, sum by (le, application) (rate(jvm_gc_pause_seconds_bucket{application=~\"$application\"}[5m])))",
          "legendFormat": "{{application}} p95",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "sum by (application) (rate(jvm_gc_pause_seconds_sum{application=~\"$application\"}[5m])) / clamp_min(sum by (application) (rate(jvm_gc_pause_seconds_count{application=~\"$application\"}[5m])), 1e-9)",
          "legendFormat": "{{application}} avg",
          "refId": "B"
        }
      ],
      "title": "GC Pause Duration (p95 + avg)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "GC pause events per second.",
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 8 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum by (application) (rate(jvm_gc_pause_seconds_count{application=~\"$application\"}[5m]))",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "title": "GC Pause Count / s",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Total GC pause time per second.",
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 8 },
      "id": 3,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "sum by (application) (rate(jvm_gc_pause_seconds_sum{application=~\"$application\"}[5m]))",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "title": "GC Pause Time / s",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Allocation and promotion rates (may be empty depending on JVM/Micrometer).",
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 14 },
      "id": 4,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "topk(10, sum by (application) (rate(jvm_gc_memory_allocated_bytes_total{application=~\"$application\"}[5m])))",
          "legendFormat": "{{application}} allocated",
          "refId": "A"
        },
        {
          "editorMode": "code",
          "expr": "topk(10, sum by (application) (rate(jvm_gc_memory_promoted_bytes_total{application=~\"$application\"}[5m])))",
          "legendFormat": "{{application}} promoted",
          "refId": "B"
        }
      ],
      "title": "Allocation / Promotion Rate",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "description": "Longest GC pause observed in the last 5 minutes (if jvm_gc_pause_seconds_max exists).",
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 12, "x": 0, "y": 21 },
      "id": 5,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal"
      },
      "targets": [
        {
          "editorMode": "code",
          "expr": "max by (application) (max_over_time(jvm_gc_pause_seconds_max{application=~\"$application\"}[5m]))",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "title": "Longest GC Pause (last 5m)",
      "type": "stat"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["acmecorp", "observability", "jvm"],
