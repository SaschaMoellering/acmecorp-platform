      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 10
      },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{{job=\"gateway-service\"}}[1m])",
          "legendFormat": "{{uri}}",
          "refId": "A"
        }
      ]
